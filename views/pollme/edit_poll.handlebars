<center>
    <div class="home-before">
            <h3 id="mypoll-heading">Edit Poll</h3>
        <div>
            <form role="form" id="new-poll" method="post" action="/editpoll">
                <input type="hidden" name="pollId"  value="{{ poll._id }}" />
                <table class="form2">
                    <tbody>
                        <tr>
                            <th class="table-head-1">Question</th>
                            <td><input class="table-body2" style="width:100%" type="text" name="question" value="{{poll.question}}" required/></td>
                        </tr>
                        <tr>
                            <th class="table-head-1">Category</th>
                            <td>
                                <select class="table-body-select" style="width:100%" name="category" required>
                            <option selected value="{{poll.category}}">{{poll.category}}</option>
                            <option value="Arts">Arts</option>
                            <option value="Automotive">Automotive</option>
                            <option value="Business & Finance">Business & Finance</option>
                            <option value="Education">Education</option>
                            <option value="Entertainment">Entertainment</option>
                            <option value="Food">Food</option>
                            <option value="Fashion">Fashion</option>
                            <option value="Health">Health</option>
                            <option value="Lifestyle">Lifestyle</option>
                            <option value="Movies">Movies</option>
                            <option value="Music">Music</option>
                            <option value="Philosophy">Philosophy</option>
                            <option value="Politics">Politics</option>
                            <option value="Science">Science</option>
                            <option value="Sports">Sports</option> 
                            <option value="Technology">Technology</option>
                            <option value="Travel">Travel</option>
                            <option value="TV">TV</option>
                            <option value="Other">Other</option>
                        </select>
                        </tr>
                        <tr>
                            <th class="table-head-1">Choice 1</th>
                            <td><input class="table-body2" style="width:100%" type="text" name="choice1" value="{{ poll.ansChoice1 }}" required /></td>
                        </tr>
                        <tr>
                            <th class="table-head-1">Choice 2</th>
                            <td><input class="table-body2" style="width:100%" type="text" name="choice2" value="{{ poll.ansChoice2 }}" required/></td>
                        </tr>
                        <tr>
                            <th class="table-head-1">Choice 3</th>
                            <td><input class="table-body2" style="width:100%" type="text" name="choice3" value="{{ poll.ansChoice3 }}" required/></td>
                        </tr>
                        <tr>
                            <th class="table-head-1">Choice 4</th>
                            <td><input class="table-body2" style="width:100%" type="text" name="choice4" value="{{ poll.ansChoice4 }}" required/></td>
                        </tr>
                    </tbody>
                    <tr>

                        <td colspan="2">
                            <input class="button button-block" type="submit" value="Edit Poll">

                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</center>